<!-- renders form for new post -->
<% if user_signed_in? %>
	<div id="search">
	<%= form_for(@new_post, url: '/posts', method: 'post') do |f| %>
			<fieldset>
				<input type="text" <%= f.text_area :body, class: 'form-control', placeholder: "Go ahead! Save someone from the misery of bad small talk!" %>>
				<input type="submit" name="go" id="go" value="Post">
			</fieldset>
			<div class="form-group">
				<%= f.submit "Post!", class: 'btn btn-success' %>
			</div>
		<% end %> 
<% end %>