<h1>My Profile</h1>
<% if current_user.avatar.url %>
<% end %>
<!-- renders user profile -->
<div class="wrap">
	<p class='bold1'>Bio</p>
	<p><%= @user.bio %></p>
</div>
<div class="wrap">
	<p class='bold1'>Email</p>
	<p><%= @user.email %></p>
</div>
<div class="wrap">
<!-- renders a paricular user's posts -->
	<p class='bold1'>My Posts</p>
	<% @my_post.each do |f| %>
		<p class='bold'><%= f.body %></p><p>posted at<%= f.created_at.strftime("%l:%M%p") %> on <%= f.created_at.strftime("%d %b %Y") %></p>
	<% end %>
</div>
<br>
<%= link_to 'Edit', '/profile/edit', class: 'btn btn-info' %>
<%= link_to 'Delete', '/profile', method: 'delete',
	 class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete your profile?' } %>
<%= link_to 'Back', '/', class: 'btn btn-default' %> 