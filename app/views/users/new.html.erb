<h1>Create an Account</h1>
<!-- renders form to create an account -->
<%= form_for(@user) do |f| %>
		<div class="form-group">
			<%= f.label :handle %>
			<%= f.text_field :handle, :class => 'form-control' %>
		</div>
		
		<div class="form-group">
			<%= f.label :email %>
			<%= f.email_field :email, :class => 'form-control' %>
		</div>
		
		<div class="form-group">
			<%= f.label :bio %>
			<%= f.text_area :bio, :class => 'form-control' %>
		</div>
		
		<div class="form-group">
			<%= f.submit "Hook me up", :class => 'btn btn-success' %>  
		</div>

<% end %> 

<%= link_to 'Take me back', '/', class: 'btn btn-warning' %> 