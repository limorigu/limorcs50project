<h1>Edit your profile!</h1>
 <!-- renders form to edit user profile -->
		<%= form_for(@user, url: '/profile', method: 'put') do |f| %>

			</br>

			<div class="form-group">
				<%= f.label :handle %>
				<%= f.text_field :handle, :class => 'form-control' %>
			</div>

			</br>
			</br>
			
			<div class="form-group">
				<%= f.label :email %>
				<%= f.email_field :email, :class => 'form-control' %>
			</div>

			</br>
			</br>
			
			<div class="form-group">
				<%= f.label :bio %>
				<%= f.text_area :bio, :class => 'form-control' %>
			</div>

			</br>
			</br>
			
			<div class="form-group">
				<%= f.submit "Update your Profile", class: 'btn btn-success' %>  
			</div>
		<% end %> 

</br>

<%= link_to 'Back', '/profile', class: 'btn btn-warning' %> 
